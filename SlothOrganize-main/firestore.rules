
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para finanças
    match /users/{userId}/finances/{docId} {
      // Usuário só pode ler/escrever seus próprios documentos
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validação básica de campos na escrita (opcional, mas recomendado)
      allow create: if request.resource.data.amount is number 
                    && request.resource.data.type in ['entrada', 'saida'];
    }
    
    // Regras para analytics (cache)
    match /analytics/{userId}/{path=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Apenas Cloud Functions podem escrever aqui
    }
    
    // Regras para dados do usuário
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
